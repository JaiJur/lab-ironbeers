

<div class="row border mt-4 pt-3">
    {{#each beers as |beer|}}
        {{#with beer}}
        <div class="col-3 d-flex justify-content-around">
            <div class="card d-flex flex-column pt-4 m-2 align-items-center" style="width: 250px;">
                <img src="{{image_url}}" class="card-img-top" alt="" style="width: 75px; height:150px; background-color: #12a139">
                <div class="card-body d-flex flex-column align-items-center">
                    <h5 class="card-title">{{name}}</h5>
                </div>
                <ul class="list-group list-group-flush">
                    <p class="card-text list-group-item">{{tagline}}</p>
                    <p class="card-text list-group-item">{{description}}</p>
                    
                </ul>
               
            </div>
        </div>
        {{/with}}
    {{/each}}
</div>